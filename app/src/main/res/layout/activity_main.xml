<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#FFFEFE"
    android:gravity="center">


    <ImageView
        android:layout_marginTop="100dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_fixer"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#CC2D2D"
        android:text="Home Fixer"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fix your problem with professionals"
        android:textColor="#CC2D2D"
        android:textSize="15sp"

        android:layout_marginBottom="110dp"/>



    <EditText
        android:id="@+id/signInEmailId"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:background="@drawable/background"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:hint="Email"
        android:textAlignment="center"
        android:textColorHint="#9A9999"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/email"
        />
    <EditText
        android:id="@+id/signInPasswordId"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:background="@drawable/background"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:hint="Password"
        android:textAlignment="center"
        android:textColorHint="#9A9999"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/padlock"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginButtonId"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/button_background"
        android:text="Login"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/signUpHereTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="No account yet? Create one"
        android:textColor="#CC2D2D"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:text="login with other account"
        android:textColor="#CC2D2D"
        android:textSize="15sp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">


        <ImageView
            android:layout_margin="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/google"
            />
        <ImageView
            android:layout_margin="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:src="@drawable/linkedin" />
    </LinearLayout>








</LinearLayout>